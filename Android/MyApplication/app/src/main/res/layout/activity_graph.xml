    tools:context=".GraphActivity">
    <TextView
        android:id="@+id/info1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"
        android:text="The blue line represents the monthly cumulative raifall over the period 2000 to 2017" />

    <TextView
        android:id="@+id/info2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/info1"
        android:text="Using time series historical rainfall data we have predicted the rainfall for the year 2018 and it is represented in red color."
        android:textAlignment="center"
        android:textColor="@color/colorAccent" />

    <ScrollView
